<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="https://docs.phpdoc.org/latest/phpdoc.xsd"
>
    <paths>
        <output>docs</output>
        <cache>build/cache</cache>
    </paths>
    <version number="3.0.0">
        <api format="php">
            <source dsn="../..">
                <path>config.php</path>
                <path>etc/**/*</path>
                <path>lib/**/*</path>
                <path>routes/**/*</path>
                <path>widgets/**/*</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <!--1 or more repetitions:-->
                <path>etc/markdown/**/*</path>
                <path>etc/phpdoc/**/*</path>
                <path>etc/phpMyAdmin/**/*</path>
                <path>etc/phpThumb/**/*</path>
                <path>etc/sql/**/*</path>
                <path>etc/phpinfo.php</path>
                <path>files/**/*</path>
                <path>node_modules/**/*</path>
                <path>tests/**/*</path>
                <path>tmp/**/*</path>
                <path>var/**/*</path>
                <path>vendor/**/*</path>
            </ignore>
        </api>
    </version>
</phpdocumentor>